<!DOCTYPE html>

<html>
  <head>
    <title><%= @getDocumentTitle() %></title>
    <!--Humans.txt-->
    <link type="text/plain" rel="author" href="http://www.univunix.com/humans.txt" />

    <!--Icon links-->
    <link rel="shortcut icon" href="/icons/favicon.png">
    <link rel="apple-touch-icon" href="/icons/apple-icon.png">

    <!--Meta-->
    <%- @getBlock("meta").toHTML() %>

    <%- @getBlock("styles").add([
          "/styles/pure-min.css",
          "/styles/grids-responsive-min.css",
          "/styles/font-awesome.min.css"
        ]).toHTML()
    %>
  </head>
  <body>
    <%- @content %>
    <%- @getBlock("scripts").toHTML() %>
  </body>
</html>
