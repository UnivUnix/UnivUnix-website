---
layout: body
---

<% count = 0 %>
<% for item in @getCollection(@document.collection).toJSON() : %>
  <% if count%4 is 0 : %>
    <div class="pure-g">
  <% end %>
  <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-4">
    <article  class="unvx-article-item">
      <header>
        <h2 class="unvx-item-title"><a href="<%= @getFullURL(item.url) %>"><%= item.title %></a></h2>
      </header>
      <div class="unvx-featured-img">
        <a href="<%= @getFullURL(item.url) %>">
          <img class="b-lazy" src="data:image/png;base64," lazy-src="<%= if item.headerImg? then @getThumbnail(item.headerImg) else @getThumbnail("/img/phnormal.png") %>">
        </a>
      </div>
      <footer>
        <span>
          <i class="fa fa-user"></i>
          <%= if item.authors.length > 1 then item.authors[0].concat(' y otros') else item.authors[0] %>
        </span>
      </footer>
    </article>
  </div>
  <% if (count%4 is 3) or (count is @getCollection(@document.collection).toJSON().length) : %>
    </div>
  <% end %>
  <% count++ %>
<% end %>
